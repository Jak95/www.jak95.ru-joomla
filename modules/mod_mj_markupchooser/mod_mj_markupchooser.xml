		</field>
		<field name="mobile_text" type="text" default="Mobile Version" label="Mobile Link Text"
				description="Mobile markup link text"/>
		<field name="@spacer" type="spacer" default="" label="" description=""/>
		<field name="web_show" type="radio" default="1" label="Show Desktop link"
				description="Show desktop markup link.">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</field>
		<field name="web_text" type="text" default="Standard Version" label="Desktop Link Text"
				description="Desktop markup link text"/>
		<field name="@spacer" type="spacer" default="" label="" description=""/>
		<field name="xhtml_show" type="radio" default="0" label="Show Smartphone link"
				description="Show Smartphone version link.">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</field>
		<field name="xhtml_text" type="text" default="Smartphone Version" label="Smartphone Version Link Text"
				description="Smartphone markup text"/>
		<field name="@spacer" type="spacer" default="" label="" description=""/>
		<field name="iphone_show" type="radio" default="0" label="Show iPhone link"
				description="Show iPhone version link.">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</field>
		<field name="iphone_text" type="text" default="iPhone Version" label="iPhone Version Link Text"
				description="iPhone markup link text"/>
		<field name="@spacer" type="spacer" default="" label="" description=""/>
		<field name="chtml_show" type="radio" default="0" label="Show iMode link" description="Show iMode version link.">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</field>
		<field name="chtml_text" type="text" default="iMode Version" label="iMode Version Link Text"
