<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="1.6.0" client="site" method="upgrade">
	<name>OSTimer Module</name>
	<author>OSTraining.com</author>
	<creationDate>3 March 2010</creationDate>
	<copyright>Copyright (C) 2005 - 2011 Open Source Matters. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>info@ostraining.com.com</authorEmail>
	<authorUrl>www.ostraining.com</authorUrl>
	<version>2.5.3</version>
	<description>OSTIMER_SUCCESSFULLY_INSTALLED</description>
	
	<languages>
    	<language tag="en-GB">language/en-GB/en-GB.mod_ostimer.ini</language>
	</languages>
	
	
	<files>
		<filename module="mod_ostimer">mod_ostimer.php</filename>
		<filename module="mod_ostimer">helper.php</filename>
		<filename module="mod_ostimer">index.html</filename>
		<filename module="mod_ostimer">tmpl/default.php</filename>
		<filename module="mod_ostimer">tmpl/style.css</filename>
		<filename module="mod_ostimer">tmpl/index.html</filename>
	</files>
	
	<config>
	
		<fields name="params">
			<fieldset name="basic">
				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field name="ev_dtitle" type="radio" default="1" label="DISPLAY_EVENT_TITLE_LABEL" description="YES_OR_NO">
					<option value="1">J_YES</option>
					<option value="0">J_NO</option>
				</field>
				<field name="ev_tit" type="text" default="Event Title..." label="EVENT_TITLE_LABEL" description="EVENT_TITLE_DESC" size="40"/>
				<field name="ev_ddate" type="radio" default="1" label="DISPLAY_EVENT_DATE_LABEL" description="DISPLAY_EVENT_DATE_DESC">
					<option value="1">J_YES</option>
					<option value="0">J_NO</option>
				</field>
				<field name="ev_ddate_format" type="list" default="1" label="DISPLAY_EVENT_DATE_FORMAT_LABEL" description="DISPLAY_EVENT_DATE_FORMAT_DESC">
					<option value="1">US_FORMAT</option>
					<option value="0">INT_FORMAT</option>
				</field>
				<field name="ev_d" type="text" default="01" label="DAY_LABEL" description="DAY_DESC"/>
				<field name="ev_m" type="text" default="01" label="MONTH_LABEL" description="MONTH_DESC"/>
				<field name="ev_y" type="text" default="2011" label="YEAR_LABEL" description="YEAR_DESC"/>
				<field name="ev_ddleft" type="radio" default="1" label="TIME_TO_EVENT_LABEL" description="TIME_TO_EVENT_DESC">
					<option value="1">J_YES</option>
					<option value="0">J_NO</option>
				</field>
				<field name="ev_dhour" type="radio" default="1" label="HOURS_MINUTES_TO_EVENT_LABEL" description="Do you want to display the words (Hours and minutes to event)">
					<option value="1">J_YES</option>
					<option value="0">J_NO</option>
				</field>
				<field name="ev_js" type="radio" default="1" label="JAVASCRIPT_EFFECT_LABEL" description="JAVASCRIPT_EFFECT_DESC">
					<option value="1">J_YES</option>
					<option value="0">J_NO</option>
				</field>
				<field name="ev_h" type="text" default="12" label="HOUR_LABEL" description="HOUR_DESC"/>
				<field name="ev_min" type="text" default="00" label="MINUTE_LABEL" description="MINUTE_DESC"/>
				<field name="@spacer" type="spacer" />
				<field name="ev_dlink" type="radio" default="1" label="SHOW_LINK_LABEL" description="YES_OR_NO">
					<option value="1">J_YES</option>
					<option value="0">J_NO</option>
				</field>
				<field name="ev_endtime" type="text" default="Time's Up" label="TIME_HAS_COME_LABEL" description="TIME_HAS_COME_DESC"/>
				<field name="ev_ltitle" type="text" default="" label="TEXT_URL_LABEL" description="TEXT_URL_DESC"/>
				<field name="ev_l" type="text" default="" label="URL_LABEL" description="URL_DESC"/>
				<field name="@spacer" type="spacer" />
				<field name="loadcss" type="radio" default="1" label="LOAD_MODULE_LABEL" description="LOAD_MODULE_DESC">
					<option value="1">J_YES</option>
					<option value="0">J_NO</option>
				</field>
				
				<field name="@spacer" type="spacer" />
				<field name="ev_trans_days" type="text" default="Days" label="TRANSLATE_DAYS_LABEL" description="TRANSLATE_DAYS_DESC"/>
				<field name="ev_trans_hr" type="text" default="Hr." label="TRANSLATE_HOURS_LABEL" description="TRANSLATE_HOURS_DESC"/>
				<field name="ev_trans_min" type="text" default="Min." label="TRANSLATE_MINUTES_LABEL" description="TRANSLATE_MINUTES_DESC"/>
				<field name="ev_trans_sec" type="text" default="Sec." label="TRANSLATE_SECONDS_LABEL" description="TRANSLATE_SECONDS_DESC"/>
				<field name="ev_color" type="text" default="#2B7CBE" label="NUMBER_COLOR_LABEL" description="NUMBER_COLOR_DESC"/>
				<field name="show_zero_day" type="radio" default="1" label="SHOW_ZERO_DAY" description="SHOW_ZERO_DAY_DESC">
					<option value="1">J_YES</option>
					<option value="0">J_NO</option>
				</field>
			</fieldset>
		</fields>
	</config>
	
</extension>
