			<language tag="en-GB">admin/languages/en-GB.com_gcalendar.sys.ini</language>
			<language tag="de-DE">admin/languages/de-DE.com_gcalendar.ini</language>
			<language tag="de-DE">admin/languages/de-DE.com_gcalendar.sys.ini</language>
			<language tag="nl-NL">admin/languages/nl-NL.com_gcalendar.ini</language>
			<language tag="nl-NL">admin/languages/nl-NL.com_gcalendar.sys.ini</language>
		</languages>
