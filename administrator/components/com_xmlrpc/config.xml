<?xml version="1.0" encoding="utf-8"?>
<config>
	<fieldset name="component"  addfieldpath="/administrator/components/com_xmlrpc/elements">
		<field
			name="plugin"
			type="plugin"
			default="movabletype"
			label="COM_XMLRPC_CONFIG_FIELD_PLUGIN_LABEL"
			description="COM_XMLRPC_CONFIG_FIELD_PLUGIN_DESC">
		</field>
		
		<field
			name="show_rsd"
			type="radio"
			default="1"
			label="COM_XMLRPC_SHOW_RSD"
			description="COM_XMLRPC_SHOW_RSD_DESC">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		
		<field
			name="show_manifest"
			type="radio"
			default="1"
			label="COM_XMLRPC_SHOW_MANIFEST"
			description="COM_XMLRPC_SHOW_MANIFEST_DESC">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		
		<field
			name="debug"
			type="radio"
			default="0"
			label="COM_XMLRPC_CONFIG_FIELD_DEBUG_LABEL"
			description="COM_XMLRPC_CONFIG_FIELD_DEBUG_DESC">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>

		<field
			name="display_errors"
			type="radio"
			default="0"
			label="COM_XMLRPC_CONFIG_FIELD_DISPLAYERRORS_LABEL"
			description="COM_XMLRPC_CONFIG_FIELD_DISPLAYERRORS_DESC">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
	</fieldset>
	<fieldset
		name="permissions"
		label="JCONFIG_PERMISSIONS_LABEL"
		description="JCONFIG_PERMISSIONS_DESC"
		>

		<field
			name="rules"
			type="rules"
			label="JCONFIG_PERMISSIONS_LABEL"
			filter="rules"
			validate="rules"
			component="com_xmlrpc"
			section="component">
			<action
				name="core.admin"
				title="JACTION_ADMIN"
				description="JACTION_ADMIN_COMPONENT_DESC" />
			<action
				name="core.manage"
				title="JACTION_MANAGE"
				description="JACTION_MANAGE_COMPONENT_DESC" />
		</field>
	</fieldset>
</config>
