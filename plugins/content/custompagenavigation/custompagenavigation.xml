<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="content" method="upgrade">
	<name>Content - Custom Page Navigation</name>
	<author>E-max</author>
	<creationDate>Ago 2011</creationDate>
	<copyright>Copyright (C) 2010 - 2011 E-max. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>webmaster@e-max.it</authorEmail>
	<authorUrl>http://www.e-max.it</authorUrl>
	<version>1.3</version>
	<description>PLG_CONTENT_CUSTOMPAGENAVIGATION_DESCRIPTION</description>
	<files>
		<filename plugin="custompagenavigation">custompagenavigation.php</filename>
		<folder>style</folder>
		<filename>index.html</filename>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_content_custompagenavigation.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.plg_content_custompagenavigation.sys.ini</language>
		<language tag="it-IT">language/it-IT/it-IT.plg_content_custompagenavigation.ini</language>
		<language tag="it-IT">language/it-IT/it-IT.plg_content_custompagenavigation.sys.ini</language>
	</languages>
	<config>
	 <fields name="params">
	   <fieldset name="basic">
		<field name="prevnext_text" type="radio" default="0" label="PLG_CONTENT_CUSTOMPAGENAVIGATION_ARROW" description="PLG_CONTENT_CUSTOMPAGENAVIGATION_ARROW_DESC">
			<option value="0">JNo</option>
			<option value="1">JYes</option>
		</field>
		<field name="prevnext_title" type="radio" default="1" label="PLG_CONTENT_CUSTOMPAGENAVIGATION_TITLE" description="PLG_CONTENT_CUSTOMPAGENAVIGATION_TITLE_DESC">
			<option value="0">JNo</option>
			<option value="1">JYes</option>
		</field>
		<field name="prevnext_standard" type="radio" default="0" label="PLG_CONTENT_CUSTOMPAGENAVIGATION_STANDARD" description="PLG_CONTENT_CUSTOMPAGENAVIGATION_STANDARD_DESC">
			<option value="0">JNo</option>
			<option value="1">JYes</option>
		</field>
		<field name="ordering" type="list" default="ordering_fwd" label="PLG_CONTENT_CUSTOMPAGENAVIGATION_ORDERING" description="PLG_CONTENT_CUSTOMPAGENAVIGATION_ORDERING_DESC">
			<option value="created_dsc">PLG_CONTENT_CUSTOMPAGENAVIGATION_ORDER_DATE_DSC</option>
			<option value="created_asc">PLG_CONTENT_CUSTOMPAGENAVIGATION_ORDER_DATE_ASC</option>
			<option value="title_az">PLG_CONTENT_CUSTOMPAGENAVIGATION_ORDER_TITLE_AZ</option>
			<option value="title_za">PLG_CONTENT_CUSTOMPAGENAVIGATION_ORDER_TITLE_ZA</option>
			<option value="popular_first">PLG_CONTENT_CUSTOMPAGENAVIGATION_ORDER_POPULAR_FIRST</option>
			<option value="popular_last">PLG_CONTENT_CUSTOMPAGENAVIGATION_ORDER_POPULAR_LAST</option>
			<option value="ordering_fwd">PLG_CONTENT_CUSTOMPAGENAVIGATION_ORDER_MANAGER_FWD</option>
			<option value="ordering_rev">PLG_CONTENT_CUSTOMPAGENAVIGATION_ORDER_MANAGER_REV</option>
			<option value="id_asc">PLG_CONTENT_CUSTOMPAGENAVIGATION_ORDER_ID_ASC</option>
			<option value="id_dsc">PLG_CONTENT_CUSTOMPAGENAVIGATION_ORDER_ID_DSC</option>
		</field>
		<field name="arrow_sx" type="filelist" default="silver_L.png" directory="/plugins/content/custompagenavigation/style/" filter="\.png$|\.gif$|\.jpg$" stripext="0" hide_none="0" hide_default="1" label="PLG_CONTENT_CUSTOMPAGENAVIGATION_IMAGE_LEFT" description="PLG_CONTENT_CUSTOMPAGENAVIGATION_IMAGE_LEFT_DESC" />
		<field name="arrow_dx" type="filelist" default="silver_R.png" directory="/plugins/content/custompagenavigation/style/" filter="\.png$|\.gif$|\.jpg$" stripext="0" hide_none="0" hide_default="1" label="PLG_CONTENT_CUSTOMPAGENAVIGATION_IMAGE_RIGHT" description="PLG_CONTENT_CUSTOMPAGENAVIGATION_IMAGE_RIGHT_DESC" />
		<field name="credits" type="radio" default="0" label="PLG_CONTENT_CUSTOMPAGENAVIGATION_CREDITS" description="PLG_CONTENT_CUSTOMPAGENAVIGATION_CREDITS_DESC">
			<option value="0">JNo</option>
			<option value="1">JYes</option>
		</field>
	    </fieldset>
	   </fields>
	  </config>
</extension>